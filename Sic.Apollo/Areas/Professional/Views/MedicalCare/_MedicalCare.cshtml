@model Sic.Apollo.Models.Medical.MedicalCare

<div class="box_info_person">
    <div class="circle_title_box_info"></div><div class="title_box_info">
        <h5 class="float">@Model.EvolutionDate.ToDefaultDateFormat()</h5>
        <div class="float content_ico_edit_title" style="cursor:pointer">
            <i class="fa fa-pencil"></i>
        </div>
        <div class="float content_ico_edit_title" style="cursor:pointer">
            <i class="fa fa-print"></i>
        </div>
        <div class="float content_ico_edit_title" style="cursor:pointer">
            <i class="fa fa-trash-o"></i>
        </div>
    </div>

    <table class="table table-condensed">
        <thead>
        </thead>
        <tbody>
            @if (!string.IsNullOrWhiteSpace(Model.Evolution))
            {
                <tr>
                    <td width="18%">@LabelFor.MedicalCareEvolution</td>
                    <td width="74%">@Model.Evolution</td>
                </tr>
            }
            @if (!string.IsNullOrWhiteSpace(Model.Diagnostic))
            {
                <tr>
                    <td width="18%">@LabelFor.MedicalCareDiagnostic</td>
                    <td width="74%">@Model.Diagnostic</td>
                </tr>
            }
            @if (!string.IsNullOrWhiteSpace(Model.Treatment))
            {
                <tr>
                    <td width="18%">@LabelFor.MedicalCareTreatment</td>
                    <td width="74%">@Model.Treatment</td>
                </tr>
            }
        </tbody>
    </table>
    @if (Model.MedicalCareMedications.Any())
    {
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th width="30%">@LabelFor.Medicine</th>
                    <th width="50%">@LabelFor.Posology</th>
                    <th width="20%">@LabelFor.Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var medicine in Model.MedicalCareMedications)
                {
                    <tr>
                        <td>@medicine.MedicationName</td>
                        <td>@medicine.Posology</td>
                        <td>@medicine.Quantity</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>



