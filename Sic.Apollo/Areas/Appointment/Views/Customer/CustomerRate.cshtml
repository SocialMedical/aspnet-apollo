@model Sic.Apollo.Models.Appointment.View.CustomerAppointment

@{
    ViewBag.Title = Sic.Apollo.Resources.Resources.LabelForAppointmentRate;
}

<script src="@Url.Content("~/Scripts/custom/jquery.raty.js")" type="text/javascript"></script>

@using (Html.BeginForm(new { appointmentTransactionId = Model.AppointmentTransactionId, rateScore1 = Model.RateScore1, rateScore2 = Model.RateScore2, rateScore3 = Model.RateScore3, rateComments = Model.RateComments}))
{
    <h1>@Sic.Apollo.Resources.Resources.LabelForAppointmentRate</h1>
    @Html.HiddenFor(model => model.RateScore1)
    @Html.HiddenFor(model => model.RateScore2)
    @Html.HiddenFor(model => model.RateScore3)
    <table>
    <tr>
        <td> 
            <p><b>@Sic.Apollo.Resources.Resources.LabelForDate: </b>@Model.StartDate</p>                       

            <table>
                <tr>
                    <td>@Sic.Apollo.Resources.Resources.LabelForRateScore1</td>
                    <td>@Sic.Apollo.Resources.Resources.LabelForRateScore2</td>
                    <td>@Sic.Apollo.Resources.Resources.LabelForRateScore3</td>
                </tr>
                <tr>
                    <td><div id="rateScore1"></div></td>
                    <td><div id="rateScore2"></div></td>
                    <td><div id="rateScore3"></div></td>
                </tr>
            </table>

            <p><b>@Sic.Apollo.Resources.Resources.LabelForRateComments</b></p>
            <p>@Html.TextAreaFor(p => p.RateComments)</p>
            <p>
                <input type="submit" value="@Sic.Apollo.Resources.Resources.LabelForAppointmentRate" />                
            </p>          
        </td>
        <td>
            @{ Html.RenderAction("ProfessionalCard", "Professional", new { professionalId = Model.ProfessionalId, specializationId = Model.SpecializationId });}
        </td>
    </tr>
</table>      
}

<div>
    @Html.ActionLink(Sic.Apollo.Resources.Resources.LabelForPendingRatings, "CustomerPendingRatings")
</div>

<script type="text/javascript">
    $('#rateScore1').raty(
        {
            score: @{ @Model.RateScore1 },
            hints: ['@{ @Sic.Apollo.Resources.Resources.LabelForBad }', '@{ @Sic.Apollo.Resources.Resources.LabelForPoor }', '@{ @Sic.Apollo.Resources.Resources.LabelForRegular }', '@{ @Sic.Apollo.Resources.Resources.LabelForGood }', '@{ @Sic.Apollo.Resources.Resources.LabelForGorgeous }'],
            click: function(score, evt) {                   
                   $('#RateScore1').val(score);
                  }
        });
    $('#rateScore2').raty(
        {
            score: @{ @Model.RateScore2 },
            hints: ['@{ @Sic.Apollo.Resources.Resources.LabelForBad }', '@{ @Sic.Apollo.Resources.Resources.LabelForPoor }', '@{ @Sic.Apollo.Resources.Resources.LabelForRegular }', '@{ @Sic.Apollo.Resources.Resources.LabelForGood }', '@{ @Sic.Apollo.Resources.Resources.LabelForGorgeous }'],
            click: function(score, evt) {                   
                   $('#RateScore2').val(score);
                  }
            });
    $('#rateScore3').raty(
        {
            score: @{ @Model.RateScore3 },
            hints: ['@{ @Sic.Apollo.Resources.Resources.LabelForBad }', '@{ @Sic.Apollo.Resources.Resources.LabelForPoor }', '@{ @Sic.Apollo.Resources.Resources.LabelForRegular }', '@{ @Sic.Apollo.Resources.Resources.LabelForGood }', '@{ @Sic.Apollo.Resources.Resources.LabelForGorgeous }'],
            click: function(score, evt) {                   
                   $('#RateScore3').val(score);
                  }
            });
</script>