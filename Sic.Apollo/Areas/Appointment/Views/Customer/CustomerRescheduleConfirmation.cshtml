@model Sic.Apollo.Models.Appointment.Appointment
@{
    ViewBag.Title = Sic.Apollo.Resources.Resources.LabelForAppointmentReschedule;
}

@using (Html.BeginForm("CustomerRescheduleBook", "Appointment", new { appointmentId = Model.AppointmentId, reschudeleAppointmentTransactionId = ViewBag.ReschudeleAppointmentTransactionId }))
{
<h1>@Sic.Apollo.Resources.Resources.LabelForAppointmentReschedule</h1>
<table>
    <tr>
        <td> 
            <p><b>@Sic.Apollo.Resources.Resources.LabelForDate: </b>@Model.StartDate</p>           
            <p>@Sic.Apollo.Resources.Resources.LegendForAppointmentRescheduleConfirmation</p>  
            <p>
                <input type="submit" value="@Sic.Apollo.Resources.Resources.LabelForAppointmentReschedule" />                
            </p>          
        </td>
        <td>
            @{ Html.RenderAction("ProfessionalCard", "Professional", new { professionalId = Model.ProfessionalId });}
        </td>
    </tr>
</table>      
}

<div>
    @Html.ActionLink(Sic.Apollo.Resources.Resources.LabelForMyAppointments, "CustomerMyAppointments")
</div>