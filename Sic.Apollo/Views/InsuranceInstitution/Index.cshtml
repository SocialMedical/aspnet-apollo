@model IEnumerable<Sic.Apollo.Models.Pro.InsuranceInstitution>

@{
    ViewBag.Title = Sic.Apollo.Resources.Resources.LabelForIndex;
}

<h2>@Sic.Apollo.Resources.Resources.LabelForIndex</h2>

<p>
    @Html.ActionLink(Sic.Apollo.Resources.Resources.LabelForCreateNew, "Create")
</p>
<table>
    <tr>
      <th>@Sic.Apollo.Resources.Resources.LabelForFirstName</th>
      <th>@Sic.Apollo.Resources.Resources.LabelForPhoneNumber</th>
      <th>@Sic.Apollo.Resources.Resources.LabelForEmail</th>
      <th>@Sic.Apollo.Resources.Resources.LabelForDefaultWebSite</th>
      <th>@Sic.Apollo.Resources.Resources.LabelForPriority</th>    
      <th>@Sic.Apollo.Resources.Resources.LabelForActive</th>        
      <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Contact.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contact.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contact.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contact.WebSite)
        </td>              
        <td>
            @Html.DisplayFor(modelItem => item.Priority)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @Html.ActionLink(Sic.Apollo.Resources.Resources.LabelForEdit, "Edit", new { id=item.InstitutionId }) |
            @Html.ActionLink(Sic.Apollo.Resources.Resources.LabelForDetails, "Details", new { id=item.InstitutionId }) |
            @Html.ActionLink(Sic.Apollo.Resources.Resources.LabelForDelete, "Delete", new { id=item.InstitutionId })
        </td>
    </tr>
}

</table>
