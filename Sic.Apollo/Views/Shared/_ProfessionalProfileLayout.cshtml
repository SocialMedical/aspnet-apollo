<!DOCTYPE html>
<html>
<head>
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/images/favicon.png")" />
    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/Content/images/favicon.ico")" />
    <link href="@Url.ContentVersion("~/Content/styles/style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.ContentVersion("~/Content/styles/base_medical_profile.css")" rel="stylesheet" type="text/css" />    
    <link href="@Url.ContentVersion("~/Content/styles/fonts/stylesheet.css")" rel="stylesheet" type="text/css" />  
    <link href="@Url.ContentVersion("~/Scripts/tapmodo-jcrop/jquery.Jcrop.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.ContentVersion("~/Content/styles/medical_calendar_book.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.ContentVersion("~/Scripts/jquery.tools/tooltip.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.ContentVersion("~/Content/themes/base/jquery.ui.autocomplete.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.ContentVersion("~/Content/themes/base/jquery.ui.core.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.ContentVersion("~/Content/themes/base/jquery.ui.datepicker.css")" rel="stylesheet"  type="text/css" />
    <link href="@Url.ContentVersion("~/Content/themes/base/jquery.ui.theme.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.ContentVersion("~/Content/styles/dialog.css")" rel="stylesheet" type="text/css" />
    @RenderSection("LinksImport", false)
      
    <script src="@Url.ContentVersion("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Url.ContentVersion("~/Scripts/jquery-ui-1.8.21.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.ContentVersion("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.ContentVersion("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.ContentVersion("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>   
    <script src="@Url.ContentVersion("~/Scripts/custom/datetime.js")" type="text/javascript"></script>
    <script src="@Url.ContentVersion("~/Scripts/Custom/customvalidation.js")" type="text/javascript"></script>
    <script src="@Url.ContentVersion("~/Scripts/tapmodo-jcrop/jquery.Jcrop.min.js")" type="text/javascript"></script>
    <script src="@Url.ContentVersion("~/Scripts/custom/cropimage.js")" type="text/javascript"></script>     
    <script src="@Url.ContentVersion("~/Scripts/custom/select.js")" type="text/javascript"></script>
    <script src="@Url.ContentVersion("~/Scripts/custom/message.js")" type="text/javascript"></script>
    <script src="@Url.ContentVersion("~/Scripts/jquery.tools/jquery.tools.tooltip.min.js")" type="text/javascript"></script>
    <script src="@Url.ContentVersion("~/Scripts/sic/core.js")" type="text/javascript"></script>
    <script src="@Url.ContentVersion("~/Scripts/sic/modernizer.js")" type="text/javascript"></script>
    
    <script src="@Url.ContentVersion("~/Scripts/apollo/professionalProfile.js")" type="text/javascript"></script>

    @RenderSection("ScriptsImport", false)

    @RenderSection("Imports", false)
    <title>@ViewBag.Title</title>
    @RenderSection("meta", false) 
</head>
<body>
    @{Html.RenderPartial("Dialog");}
    <!--Header-->
    <div id="header">
        <div id="header_inner">
            <a href="@Url.Action("Index", "Home")">
                <div id="logo">
                </div>
            </a>
            @{ Html.RenderPartial("LoginButton"); }
        </div>
    </div>
    <!--FINCabecera-->
    <div id="wrapper">
        <div id="margintop_wrapper">
        </div>
        <!--reservar cita-->
        @{
            Sic.Apollo.ProfessionalOption option = (Sic.Apollo.ProfessionalOption)ViewBag.ProfessionalOption;
            string headerClass = "";
            switch(option)
            {
                case Sic.Apollo.ProfessionalOption.ProfessionalBook:
                    headerClass = "top_book_medical";    
                    break;
                default:
                    headerClass = "top_edit_medical";    
                    break;
            }            
        }
        <div class="@{@headerClass}">
            <span class="txt_az_18">@ViewBag.OptionTitle</span>
        </div>

        <div id="content_info">
            <!--inicio left medical-->
            <div id="content_medical_left">
                @{Html.RenderAction("ProfileOptions", "Professional", new { option = ((int)ViewBag.ProfessionalOption) });}
            </div>
            <!--fin left medical-->
            @RenderBody()
        </div>
        <!--reservar cita-->
        @{ Html.RenderPartial("Footer");}
        <!--wrapperr-->
    </div>
</body>
</html>

<script>
 @{
        if (!String.IsNullOrEmpty(ViewBag.Message))
        {
            if(String.IsNullOrEmpty(ViewBag.MessageType))
            {
                ViewBag.MessageType = Sic.Constants.MessageType.Information;
            }

            <text>setMessage('@Html.Raw(ViewBag.Message.ToString())', '@ViewBag.MessageType.ToString()');</text>
        }   
    }
</script>
