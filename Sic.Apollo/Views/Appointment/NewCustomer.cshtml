@model Sic.Apollo.Models.Security.SignIn
           
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("AppointmentRegisterCustomer", "Account", new { appointmentId = ViewBag.AppointmentId, specializationId = ViewBag.SpecializationId }))
{
    @Html.ValidationSummary(true)       

    <div id="info_book">
        <div>
            <span class="txt_az_18">@Sic.Apollo.Resources.Resources.LabelForImNewHere</span></div>
        <div class="textform_book">
            @Sic.Apollo.Resources.Resources.LegendForNewCustomer
        </div>
        <div class="boxsform">
            @Html.TextBoxFor(m => m.LogonName, new { @class = "input_text" })
            @Html.ValidationMessageFor(m => m.LogonName)
        </div>
        <div class="textform_book">            
            <input type="submit" class="btn_next" value="@Sic.Apollo.Resources.Resources.LabelForContinue" /></div>
        <div class="textform_book">
        </div>
    </div>      
}
