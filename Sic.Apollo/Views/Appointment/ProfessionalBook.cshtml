            <div id="content_day_date">
                @(((DateTime)ViewBag.StartDate).ToString("dd"))</div>
            <div id="content_date_complete">
                <div>
                    <span class="txt_az_18">@(((DateTime)ViewBag.StartDate).ToString("dddd"))</span></div>
                <div>
                    @(((DateTime)ViewBag.StartDate).ToString("MMMM yyyy"))</div>
            </div>
        </div>
        <!--dia fecha-->
        <div id="content_icons_caption">
            <div class="content_icons_reference">
                <ul class="ul_icons_reference">
