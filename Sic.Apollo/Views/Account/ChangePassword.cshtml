@model Sic.Apollo.Models.Security.View.ChangePassword
@{
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
    ViewBag.Title = Sic.Apollo.Resources.Resources.TitleForChangePassword;
}
@section meta{
    <meta name="robots" content="noindex,nofollow"/>
}
@section Imports{
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>   
<link href="@Url.Content("~/Content/styles/simple_content.css")" rel="stylesheet" type="text/css" />
}
<div id="margintop_wrapper">
</div>
<div id="top_header">
    <span class="txt_az_18">@Sic.Apollo.Resources.Resources.TitleForChangePassword</span>
</div>
<div id="simple_content">
    <div id="inner_simple_content">
        <div id="form_content">
            @using (Html.BeginForm("ChangePassword", "Account", null, FormMethod.Post))                
            {      
                @Html.HiddenFor(model=>model.UserId)                  
                <div>
                    <span class="txt_az_18">@Sic.Apollo.Resources.Resources.LegendForChangePassword</span>
                </div>
                <div class="textform_simple">@Sic.Apollo.Resources.Resources.LabelForLogonName: <b>@Model.LogonName</b></div>                
                <div class="textform_simple">@Sic.Apollo.Resources.Resources.LabelForPassword</div>
                <div>
                    @Html.PasswordFor(model => model.Password, new { id = "login_box_Password", @class = "box_login_form" })
                    <div><span class="error_field">@Html.ValidationMessageFor(model => model.Password)</span></div>
                </div>
                <div class="textform_simple">@Sic.Apollo.Resources.Resources.LabelForNewPassword</div>
                <div>
                    @Html.PasswordFor(model => Model.NewPassword, new { id = "login_box_Password", @class = "box_login_form" })
                    <div><span class="error_field">@Html.ValidationMessageFor(model => Model.NewPassword)</span></div>
                </div>
                <div class="textform_simple">@Sic.Apollo.Resources.Resources.LableForConfirmNewPassword</div>
                <div>
                    @Html.PasswordFor(model => model.ConfirmedNewPassword, new { id = "login_box_Password", @class = "box_login_form" })
                    <div><span class="error_field">@Html.ValidationMessageFor(model => model.ConfirmedNewPassword)</span></div>
                </div>
                <div>
                    <br />
                    <input name="button" type="submit" class="btn_next" id="button" value="@Sic.Apollo.Resources.Resources.LabelForSave" />
                </div>
                <div>
                    <label class="txt_az_15" id="loginMessage" />
                </div>                    
            }
            <div style="margin-top: 30px;">
                <a class="txt_az_18" href="/">@Sic.Apollo.Resources.Resources.LabelForGoToMainPage</a>
            </div>
        </div>
    </div>
</div>
